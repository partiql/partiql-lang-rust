// Comma as terminator (i.e. "<T>, <T>, <T>," where final comma is optional)
// This is a macro; see http://lalrpop.github.io/lalrpop/tutorial/006_macros.html
CommaTerm<T>: Vec<T> = {
    <mut v:(<T> ",")*> <e:T?> => match e {
        None => v,
        Some(e) => {
            v.push(e);
            v
        }
    }
};

// Comma as separator (i.e. "<T>, <T>, <T>")
// This is a macro; see http://lalrpop.github.io/lalrpop/tutorial/006_macros.html
CommaSep<T>: Vec<T> = {
    <mut v:(<T> ",")*> <e:T> => {
        v.push(e);
        v
    }
};

