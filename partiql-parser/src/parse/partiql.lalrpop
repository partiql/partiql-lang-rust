    <lo:@L> <sfw:SfwQuery> <hi:@R> => state.node(ast::QuerySet::Select( Box::new(sfw)), lo..hi),
    <lo:@L> <values:Values> <hi:@R> => values,
    <lo:@L> <table:ExplicitTable> <hi:@R> => table,
}

