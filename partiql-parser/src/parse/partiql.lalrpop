SingleQuery: ast::AstNode<ast::QuerySet> = {
    <lo:@L> <expr:ExprQuery> <hi:@R> => {
        match *expr {
           ast::Expr::Query(ast::AstNode{ node: ast::Query{set, order_by:None, limit_offset:None} , .. }) => set,
           _ => state.node(ast::QuerySet::Expr( expr ), lo..hi),
        }
