    "[" "*" "]" => {
        ast::PathStep::PathForEach
    },
    "." "*" => {
        ast::PathStep::PathUnpivot
    },
    "[" <expr:ExprQuery> "]" => {
        ast::PathStep::PathIndex( ast::PathExpr{ index: Box::new(*expr) })
    },
}

